{
    "name": "nextjs-monorepo",
    "private": true,
    "scripts": {
        "build": "turbo build",
        "dev": "turbo dev",
        "lint": "turbo lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "admin": "pnpm --filter crawl-admin",
        "crawl": "pnpm --filter crawl",
        "admin:docker:build": "docker build --build-arg ADMIN_SERVER_END_POINT=http://localhost:3333 --build-arg PORT=3333 -t admin-next -f apps/crawl-admin/Dockerfile .",
        "admin:docker:run": "docker run -d -p 3000:3333 admin-next",
        "admin:docker:start": "pnpm admin:docker:build && pnpm admin:docker:run"
    },
    "devDependencies": {
        "@repo/eslint-config": "workspace:*",
        "@repo/typescript-config": "workspace:*",
        "@repo/prettierrc-config": "workspace:*",
        "turbo": "latest"
    },
    "packageManager": "pnpm@8.9.0",
    "engines": {
        "node": ">=18"
    }
}
